<p id="notice"><%= notice %></p>

<h1>Organizations
<%= link_to 'New Organization', new_organization_path, class: "btn btn-primary float-right" %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Employees</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.name %></td>
        <td><%= organization.employees.count %></td>
        <td><%= link_to 'Show', organization %></td>
        <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
        <td><%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
