<%= form_with(model: employee, local: true) do |form| %>
  <% if employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :name, class: "col-2 col-form-label" %>
    <%= form.text_field :name, id: :employee_name, class: "form-control col-6" %>
  </div>

  <div class="form-group row">
    <%= form.label :dob, class: "col-2 col-form-label" %>
    <%= form.date_field :dob, id: :employee_dob, class: "form-control col-6" %>
  </div>

  <div class="form-group row">
    <%= form.label :gender, class: "col-2 col-form-label" %>
    <%= form.text_field :gender, id: :employee_gender, class: "form-control col-6" %>
  </div>

  <div class="form-group row">
    <%= form.label :phone, class: "col-2 col-form-label" %>
    <%= form.text_field :phone, id: :employee_phone, class: "form-control col-6" %>
  </div>

  <div class="form-group row">
    <%= form.label :email, class: "col-2 col-form-label" %>
    <%= form.text_field :email, id: :employee_email, class: "form-control col-6" %>
  </div>

  <div class="form-group row">
    <%= form.label :ssn, class: "col-2 col-form-label" %>
    <%= form.text_field :ssn, id: :employee_ssn, class: "form-control col-6" %>
  </div>

  <div class="form-group row">
    <%= form.label :address, class: "col-2 col-form-label" %>
    <%= form.text_area :address, id: :employee_address, class: "form-control col-6" %>
  </div>

  <div class="form-group row">
    <%= form.label :organization_id, class: "col-2 col-form-label" %>
    <%= form.select :organization_id, Organization.all.map { |org| [org.name, org.id] }, { include_blank: true }, id: :employee_organization_id, class: "form-control col-6" %>
  </div>

  <div class="form-group row">
    <div class="offset-2 col-6">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
